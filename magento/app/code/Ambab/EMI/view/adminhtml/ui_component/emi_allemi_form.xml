<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">emi_allemi_form.allemi_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">EMI Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Ambab\EMI\Block\Adminhtml\Allemi\Edit\SaveAndContinueButton"/>
            <button name="save" class="Ambab\EMI\Block\Adminhtml\Allemi\Edit\SaveButton"/>
            <button name="reset" class="Ambab\EMI\Block\Adminhtml\Allemi\Edit\ResetButton"/>
            <button name="delete" class="Ambab\EMI\Block\Adminhtml\Allemi\Edit\DeleteButton"/>
            <button name="back" class="Ambab\EMI\Block\Adminhtml\Allemi\Edit\BackButton"/>
        </buttons>
        <namespace>emi_allemi_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>emi_allemi_form.allemi_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="allemi_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="emi/allemi/save"/>
        </settings>
        <dataProvider class="Ambab\EMI\Model\Allemi\DataProvider" name="allemi_form_data_source">
            <settings>
                <requestFieldName>emi_id</requestFieldName>
                <primaryFieldName>emi_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="emi_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">allemi</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>emi_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">allemi</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable EMI</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="bank_name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">allemi</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="letters-only" xsi:type="boolean">true</rule>
                    <rule name="max_text_length" xsi:type="string">10</rule>   
                </validation>
                <dataType>text</dataType>
                <label translate="true">Bank Name</label>
                <dataScope>bank_name</dataScope>
            </settings>
        </field>

        <field name="interest_rate" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">allemi</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule>
                    <rule name="validate-integer" xsi:type="boolean">true</rule>
                   <rule name="validate-number-range" xsi:type="string">0-20</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Interest Rate</label>
                <dataScope>interest_rate</dataScope>
            </settings>
        </field>
                 <field name="emi_plan" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">allemi</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-greater-than-zero" xsi:type="boolean">true</rule>
                    <rule name="validate-integer" xsi:type="boolean">true</rule>
                    <rule name="validate-number-range" xsi:type="string">3-12</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">EMI PLAN</label>
                <dataScope>emi_plan</dataScope>
            </settings>
        </field>
    </fieldset> 

</form>
